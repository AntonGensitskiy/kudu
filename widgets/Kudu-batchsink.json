{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "Apache Kudu Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Table Name",
          "name": "tableName",
          "description": "Name of the Kudu table"
        },
        {
          "widget-type": "textbox",
          "label": "Master Addresses",
          "name": "masterAddresses",
          "description": "Comma separated list of hostname:port of Apache Kudu Masters"
        },
        {
          "widget-type": "textbox",
          "label": "Operation Timeout in ms",
          "name": "operationTimeoutMs",
          "description": "Apache Kudu operation timeout in ms"
        }
      ]
    }
  ],
  "jump-config": {
    "datasets": [{
      "ref-property-name": "tableName"
    }]
  },
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string",
          "map<string, string>"
        ],
        "schema-default-type": "string"
      }
    }
  ]
}
